theme = dark:xcodedark,light:xcodelight
font-family = "GeistMono Nerd Font"

# Font settings
font-size = 14
font-feature = calt, liga, dlig
font-thicken = true
font-thicken-strength = 20

cursor-style = bar

# Window settings
window-decoration = true
window-padding-x = 8
window-padding-y = 8
window-height = 33
window-width = 118
confirm-close-surface = false
cursor-click-to-move = true
title = " "

# Performance
unfocused-split-opacity = 0.8

# Hide login message by running clear on startup
shell-integration = zsh

# Text navigation (word jumps)
keybind = alt+left=text:\x1bb
keybind = alt+right=text:\x1bf
keybind = cmd+left=text:\x01
keybind = cmd+right=text:\x05

# Clear screen
keybind = cmd+k=text:\x0c

# Quick commands for enhanced zsh
keybind = cmd+shift+r=text:reload\x0d
keybind = cmd+shift+g=text:git\ status\x0d
keybind = cmd+shift+l=text:ll\x0d

# Search in terminal
keybind = cmd+f=text:/
keybind = cmd+shift+f=text:?

# Quick terminal
keybind = global:ctrl+grave_accent=toggle_quick_terminal
