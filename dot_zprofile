# Suppress login messages
[[ ! -f ~/.hushlogin ]] && touch ~/.hushlogin

# Homebrew setup (must come first to set foundation)
# This sets HOMEBREW_PREFIX, HOMEBREW_CELLAR, HOMEBREW_REPOSITORY, PATH, MANPATH, INFOPATH
if [[ "$(uname -m)" == "arm64" ]]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
else
  eval "$(/usr/local/bin/brew shellenv)"
fi

# Now source environment variables (but PATH will be prepended after)
source ~/.zsh/env.zsh
